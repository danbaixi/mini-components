page {
  background-color: #f4f4f4;
}
view {
  box-sizing: border-box;
}
.list {
  padding: 30rpx;
}
.item {
  width: 100%;
  height: 300rpx;
  background-size: 100%;
  background-position: center;
  border-radius: 16rpx;
  box-shadow: 0 0 14rpx 4rpx rgba(0, 0, 0, .2);
}
.title {
  position: relative;
  display: inline-block;
  color: #fff;
  font-size: 40rpx;
  top: 120rpx;
  left: 50rpx;
  transform: skew(-10deg, 0deg);
}
.title::before {
  position: absolute;
  content: '';
  width: 80rpx;
  height: 10rpx;
  border-radius: 20rpx;
  background-color: #fff;
  top: -40rpx;
}
.github {
  position: fixed;
  width: 100%;
  bottom: 60rpx;
  text-align: center;
  font-weight: 500;
  color: tomato;
}